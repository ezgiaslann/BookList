@model Product

<div class="col-md-3">
    <div class="card mb-1">
        <img src="~/img/@Model.ImageUrl" alt="@Model.Name" />
        <div class="card-body"></div>
        <h4 class="card-title">
            <p style="color:#888; text-align: center;">@Model.Name</p>
        </h4>

        <div class="card-footer text-center">
            <a asp-controller="Shop" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm" style="color:#888">Details</a>
            <a href="#" class="btn btn-outline-primary btn-sm ml-3" style="color:#888">Add To Cart</a>

        </div>
    </div>
</div>